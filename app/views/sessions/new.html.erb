<% provide :title, t("title.login") %>
<h1><%= t "title.login"%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>

      <%= form.label :password %>
      <%= link_to t("forgot_pass"), new_password_reset_path %>
      <%= form.password_field :password, class: "form-control" %>

      <%= form.label :remember_me, class: "checkbox inline" do %>
        <%= form.check_box :remember_me %>
        <span><%= t "remember" %></span>
      <% end %>

      <%= form.submit t("title.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "newuser" %><%= link_to t("title.signup"), signup_path %></p>
  </div>
</div>

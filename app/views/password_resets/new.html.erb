<%= provide :title, t("title.forgot_pass") %>
<h1><%= t "title.forgot_pass" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |form| %>
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>

      <%= form.submit t("submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

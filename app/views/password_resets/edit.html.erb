<% provide :title, t("reset_pass") %>
<h1><%= t "reset_pass" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |form| %>
      <%= render "shared/error_messages", errors: @user.errors %>

      <%= hidden_field_tag :email, @user.email %>

      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>

      <%= form.label :password_confirmation, t("confirm") %>
      <%= form.password_field :password_confirmation, class: "form-control" %>

      <%= form.submit t("update_pass"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
